

<div id="app">
<v-main>
<div class="d-flex flex-wrap 
justify-space-around 
justify-start md-6
">

  <% @feed_items.each do |article| %>
<li id="article-<%= article.id %>">


     <v-card
    max-width="500"
    height="100%"
    class="pa-2"
   >
  

    <v-list-item>
      <v-list-item-avatar color="grey"></v-list-item-avatar>
      <v-list-item-content>
      
        <v-list-item-title class="headline">
        <%= link_to article.title,article_path(article) %>
        </v-list-item-title>

        <v-list-item-subtitle><%= link_to article.user.name,article.user %></v-list-item-subtitle>
      </v-list-item-content>
    </v-list-item>

    <v-img
      src="https://cdn.vuetifyjs.com/images/cards/mountain.jpg"
      height="370"
    ></v-img>

  

    <v-card-actions>
      <v-btn
        text
        color="deep-purple accent-4"
      >
      <%= link_to "続きを読む",article_path(article) %>
      </v-btn>

      投稿 <%= time_ago_in_words(article.created_at) %>前

      
      
      <v-spacer></v-spacer>

      <v-btn
        icon
        @click="show = !show"
      >タグ
        <v-icon>{{ show ? 'mdi-chevron-up' : 'mdi-chevron-down' }}</v-icon>
      </v-btn>

      <v-btn icon>
        <v-icon>mdi-heart</v-icon>
      </v-btn>
    </v-card-actions>

    <v-expand-transition>
      <div v-show="show">
        <v-divider></v-divider>

        <v-card-text>
          <%= render 'articles/tag_list',tag_list:article.tag_list %>
        </v-card-text>
      </div>
    </v-expand-transition>

  

  </v-card>

  <% end %>

</li>

</div>
</v-main>
</div>

