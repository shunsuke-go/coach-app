<%= provide(:title,@title)%>
<div class="col s12 m8 push-m2">
  <div class="card">
    <div class="card-content">
      <%= form_with(model:[current_user,@profile], local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object%>
      <div class="input-field">
        <%= f.text_field :age,class:'materialize-textarea' %>
        <%= f.label :age, '年齢' %>
      </div>
      <div class="input-field">      
        <%= f.text_field :address, class: 'materialize-textarea' %>
        <%= f.label :address, '居住地' %>
      </div>
      <div class="input-field">      
        <%= f.text_field :wages, class: 'materialize-textarea',
        placeholder: '単位なし、数字のみでご記入ください' %>
        <%= f.label :wages, '希望時給単価' %>
      </div>      
      <div class="input-field">
        <%= f.text_field :favorite, class: 'materialize-textarea' %>
        <%= f.label :favorite, '得意科目' %>
      </div>
      <div class="input-field">      
        <%= f.text_area :content, class: 'materialize-textarea' %>
        <%= f.label :content, '本文' %>
      </div>
    <div class="center">
      <%= f.submit "送信", class:'btn regi-btn profile-btn' %>
    </div>
  <% end %>
  </div>
</div>