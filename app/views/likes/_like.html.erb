<div id="like_form_<%= article.id %>" class="like-form">
<% if current_user.article_like?(article) %>
 <%= render 'likes/unlike_button', article: article %>
<% else %>
  <%= render 'likes/like_button', article: article %>
<% end %>
</div>
<div id="likes_count_<%= article.id %>" class="likes-count"><%= article.likes.count %></div>