<span id="like_form_<%= article.id %>" class="like-form">
  <% if logged_in? %>
    <% if current_user.article_like?(article) %>
      <%= render 'likes/unlike_button', article: article %>
    <% else %>
      <%= render 'likes/like_button', article: article %>
    <% end %>
  <% else %>
  <a href ="/login">
    <i class="fa fa-heart fa-lg" style="color:gray">
    </i>
  </a>
  <% end %>
  <span id="likes_count_<%= article.id %>" class="likes-count"><%= article.likes.count %>
  </span>
</span>