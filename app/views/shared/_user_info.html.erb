<div class="card-content left-padding">

  <% if current_user?(@user) %>
    <div class="padding-updown-10">
      <%= link_to "アカウント情報の更新",edit_user_path(current_user),class:"amazon-blue" %></p>
    </div>
    <div class="padding-updown-10">
      <%= render 'users/profile_page' %>
    </div>
  <% else %>
    <div class="follow-form padding-updown-10">
      <%= render 'users/follow_form' %>
    </div>
    <% if logged_in? %>
      <div class="padding-updown-10">
      <%= render 'users/room_form' %>
      </div>
    <% end %>
  <% end %>      


  <div class="padding-updown-10">
    
    <%= link_to "レビューを書く・見る", user_reviews_path(@user),class:"amazon-blue" %> 
  </div>
</div>




