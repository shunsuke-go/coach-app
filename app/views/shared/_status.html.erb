<% @user ||= current_user %>
<div class="status">
  <a href="<%= following_user_path(@user) %>"  class="following">
    <strong id="following">
      <%= @user.following.count %>
    </strong>
    フォロー
  </a>
  <a href="<%= followers_user_path(@user) %>"  class="follower">
    <strong id="followers">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>