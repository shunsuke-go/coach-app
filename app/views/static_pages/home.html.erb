<% if logged_in? %>
<div class="row">
  <aside class="col s12 m4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
      
    </section>

    <section class="stats">
      <%= render 'shared/status' %>
    </section>

    <section class="micropost_form">
      <a class="waves-effect waves-light btn" href="<%= new_article_path %>">投稿</a>
    </section>
    <%= render 'shared/ranks' %>
  </aside>
    <div class="col s12 m8">
      <h3>フィード</h3>
      <%= render 'shared/feed' %>
      <%= will_paginate @feed_items %>
    </div>  
</div>
<% else %>
<div class = "center jumbotron">
<h2>  
ここはホームページです！
</h2>
<%= link_to "登録！", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>


