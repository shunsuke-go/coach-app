<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>

    <section class="stats">
      <%= render 'shared/status' %>
    </section>

    <section class="micropost_form">
      <%= render 'shared/article_form' %>
    </section>
    
  </aside>
    <div class="col-md-8">
      <h3>投稿記事一覧</h3>
      <%= render 'shared/feed' %>
    </div>  
</div>
<% else %>
<div class = "center jumbotron">
<h2>  
ここはホームページです！
</h2>
<%= link_to "登録！", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>