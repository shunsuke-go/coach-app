<%= provide(:title,"#{@user.name}のレビュー")%>
<div class="row">
  <div class="col s12 m12 l4">
    <div class="card hoverable side">
      <div class="card-content">
        <div class="center">          
          <%= render 'shared/user_avatar_big',user: @user %>
          <div id="ave_point" class="padding-updown-10">
            <% unless @reviews.empty? %>
              <%= render 'shared/review_stars',rate: @ave_rate %>
              <%= @ave_rate %>
            <% end %>
          </div></p>                  
        </div>
        <div class="center">
        <h6><%= render 'shared/status' %></h6>
        </div>
        <div class="divider"></div>
        <div class="center">
          <div class="card-content pad-t-b-12">
            <%= render 'shared/user_info',user: @user %>
          </div>
        </div>
        <div class="divider"></div>
        <%= render 'shared/profile_parts' %>
      </div>
    </div>
  </div>


  <div class="col s12 m8">
    <div class="card">
      <div class="card-content">
        <h5 class="center">レビュー</h5>
        <% if @reviews.empty? %>
          レビューはありません
          <ul id="reviews"></ul>
        <% else %>
          <ul id="reviews">
            <%= render @reviews %>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="card">
      <div class="card-content">
        <% if logged_in? %>
        <div id="review_error"></div>
        <%= render 'reviews/review_form' %>
        <% end %>
      </div>
    </div>
  </div>
</div>