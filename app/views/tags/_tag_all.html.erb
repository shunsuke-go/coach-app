<%= provide(:title,"タグ一覧") %>
<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-content">
        <div class="card-title center">
          人気のタグ
        </div>  
      </div>
      <div class="divider"></div>
      <div class="card-content row flex">
        <% @tags.each do |tag|%>
        <div class="tags">
          <a class="btn tag-button blue-grey lighten-4" href="<%= articles_path(tag_name: tag.name) %>">
            <%= "##{tag.name}" %><span class="tag-count">(<%= tag.count %>件)</span>
          </a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
