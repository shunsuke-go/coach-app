<% provide(:title,@title) %>
<div class="row">
  <div class="col s12 m12 l4">
    <div class="card hoverable side">
      <div class="card-content">
        <div class="center">          
          <%= render 'shared/user_avatar_big',user: @user %>
          <div id="ave_point" class="padding-updown-10">
            <% unless @reviews.empty? %>
              <%= render 'shared/review_stars',rate: @ave_rate %>
              <%= @ave_rate %>
            <% end %>
          </div></p>                  
        </div>
        <div class="center">
        <h6><%= render 'shared/status' %></h6>
        </div>
        <div class="divider"></div>
        <div class="center">
          <div class="card-content pad-t-b-12">
            <%= render 'shared/user_info',user: @user %>
          </div>
        </div>
        <div class="divider"></div>
        <%= render 'shared/profile_parts' %>
      </div>
    </div>
  </div>

  <div class="col s12 m8 follow">        
    <% if @users.any? %>
    <h5 class="center"><%= @title %>リスト</h5>
      <ul>
        <%= render @users %>  
      </ul>
      <%= will_paginate %>
    <% else %>
      <h5 class="center"><%= "#{@title}しているユーザーはいません" if @title == "フォロー" %></h5>
      <h5 class="center"><%= "#{@title}はいません" if @title == "フォロワー" %></h5>
    <% end %>
  </div>
</div>