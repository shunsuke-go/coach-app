<%= provide(:title,"マイページ")%>
<div class="row">
<aside class="col s12 m4">
<div class="card">
<section class="user_info">
<%= render 'shared/user_avatar',user: @user %>

<% if current_user?(@user) %>
<%= link_to "アカウント情報の更新",edit_user_path(current_user) %></p>
<%= render 'profile_page' %>
<% end %>
<%= render 'shared/status' %>
<div id="ave_point">
<% unless @reviews.empty? %>
平均：<%= @ave_rate %>点
<% end %>
</div></p>
<%= link_to "レビュー", user_reviews_path(@user) %>
</section>
</aside>

<div class="col s12 m8">
<%= render 'room_form' %>
<%= render 'follow_form' %>

<% if @user.articles.any? %>
<h3><%= @user.articles.count%>記事</h3>
<%= render 'shared/feed' %>
<%= will_paginate @feed_items %>
<% end %>
</div>
</div>
