<%= provide(:title,@user.name)%>
<div class="row">
  <div class="col s12 m12 l4">
    <div class="card">
      <div class="card-content">
        <div class="center">
        <%= render 'shared/user_avatar_big',user: @user %>
        <div class="follows">
        <%= render 'shared/status' %>
        </div>
        </div>
        <%= render 'shared/user_info',user: @user %>
        <div class="divider"></div>
        <div class="profile">
          <% if @user.profile.present? %>            
          <%= @user.profile.content %>    
          <% else %>
            <h6>プロフィールはありません</h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="col s12 m12 l8">
    <h5 class="center">投稿記事</h5>
    <% if @user.articles.any? %>
    <%= render 'shared/feed' %>
    <div class="center"><%= will_paginate @feed_items %></div> 
    <% else %>
    <h4>記事はまだありません</h4>
    <% end %>
  </div>
</div>
