<%= provide(:title,@user.name)%>
<div class="row">
  <div class="col s12 m12 l4">
    <div class="card hoverable">
      <div class="card-content top-0">
        <div>
          <div class="row">
            <div class="col s4 m4 l4">
              <%= render 'shared/user_avatar_big',user: @user %>
            </div>
            <div class="col s8 m8 l8">
              <h5><%=link_to @user.name,user_path(@user) %></h5>
              <div id="ave_point" class="padding-updown-10">
                <% unless @reviews.empty? %>
                  <%= render 'shared/review_stars',rate: @ave_rate %>
                  <%= @ave_rate %>
                <% end %>
              </div></p>  
            </div>            
          </div>
        </div>
        <h6><%= render 'shared/status' %></h6>
        <div class="divider"></div>
        <%= render 'shared/user_info',user: @user %>
        <div class="divider"></div>
        <div class="profile">
          <% if @user.profile.present? %>            
          <%= @user.profile.content %>    
          <% else %>
            <h6>プロフィールはありません</h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="col s12 m12 l8">
    <h5 class="center">投稿記事</h5>
    <% if @user.articles.any? %>
    <%= render 'shared/feed' %>
    <div class="center"><%= will_paginate @feed_items %></div> 
    <% else %>
    <h4>記事はまだありません</h4>
    <% end %>
  </div>
  <% if current_user?(@user) %>
    <section class="article_form fixed-action-btn">
      <a class="waves-effect waves-light  btn red form-btn btn-floating" href="<%= new_article_path %>">
      <i class="fas fa-pen fa-5x pen"></i></a>
    </section>
  <% end %>
</div>
