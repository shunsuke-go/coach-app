<%= provide(:title,"マイページ")%>
<h1><%= @user.name %>のページ</h1 >
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>

      <%= link_to "アカウント情報の更新",edit_user_path(current_user) %></p>
      <%= render 'profile_page' %>

      <% end %>

    <%= render 'shared/status' %>
    <%= render 'profile_list'%></p>
   
   <% unless @reviews.empty? %>
    レビュー一覧
    <div id="reviews">
    <%= render @reviews %>
    </div>
    
    <div id="ave_point">
      <%= render "reviews/ave_point" %>
    </div>
    <% end %>
    <%= render 'reviews/review_form' %>

    </section>
  </aside>

<div class="col-md-8">
  <%= render 'room_form' %>
  <%= render 'follow_form' %>
  
  <% if @user.articles.any? %>
  <h3><%= @user.articles.count%>記事</h3>
  <ol class="microposts">
  <%= render @articles %>
  </ol>
  <%= will_paginate @articles %>
    <% end %>
  </div>
</div>