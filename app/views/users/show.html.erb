<%= provide(:title,"マイページ")%>
<div class="row">
  <div class="col s12 m8">
    <%= render 'shared/user_info',user: @user %>    
  </div>

  <div class="col s12 m81">
    <%= render 'shared/user_profile',user: @user %>    
  </div>
</div>

<div class="row">
  <div class="col s12 m8 push-m2">
    <% if @user.articles.any? %>
      <%= render 'shared/feed' %>
      <div class="center"><%= will_paginate @feed_items %></div> 
    <% else %>
      <h4>記事はまだありません</h4>
    <% end %>
  </div>
</div>
